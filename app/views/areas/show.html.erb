<div class="w-full h-3/5 overflow-hidden" 
     style="background: no-repeat fixed center url(<%= asset_pack_path(area_image(@area)) %>); background-size: cover;">
     <div class="m-8 text-4xl lg:text-8xl text-white">
       <%= @area %>
     </div>
</div>
<div class="lg:relative">
  <div class="lg:relative ml-auto lg:-top-16 lg:right-8 lg:max-w-6xl bg-blue-100 text-gray-900 font-light text-xl text-justify rounded-xl p-6 border-gray-900 border-4">
    <%= @area.description %>
    <div class="text-sm text-right mt-4">
      <%= @area.contact %>
    </div>
  </div>
</div>
<div class="text-right text-xl my-2">
  <h2 class="title">Le attivit√†</h2>
  <% @area.projects.includes(:activity_type, :audience).order(:name).each do |project| %>  
    <div class="border-r-4 border-blue-400 px-8 mx-8 my-4">
      <%= link_to [:edit, project] do %>  
        <%= project.name %><br/> 
        <span class="text-sm">(<%= project.activity_type %> - <%= project.audience %>)</span>
      <% end %>
    </div>
  <% end %>

  <%= render partial: 'shared/global_activities' %>  
</div>
