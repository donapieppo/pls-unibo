<div class="w-full overflow-hidden" 
     style="height: 60vh; background: no-repeat fixed center url(<%= asset_pack_path(area_image(@area)) %>); background-size: cover;">
     <div class="m-2 md:m-8 text-5xl lg:text-8xl tracking-wide font-semibold text-white text-center">
       <%= @area %>
     </div>
</div>

<div class="lg:relative">
  <div class="relative lg:ml-auto -top-16 lg:right-8 lg:max-w-6xl mx-2 bg-pls-light font-light lg:text-lg lg:text-xl text-justify rounded-xl p-6 border-gray-900 border-4">
    <%= @area.description %>
    <div class="text-sm mt-4">
      Responsabile: <%= @area.head %>
    </div>
    <div>
      <%= link_to_edit_if_editable @area %>
    </div>
  </div>
</div>

<div class="container">
  <h2 class="title py-2">Le attività</h2>

  <%= render partial: 'projects/filters' %>  

  <div class="lg:flex lg:flex-wrap">
    <% @area.projects.includes(:activity_type, :audience).order(:name).each do |project| %>  
      <div class="lg:w-1/3 p-2 lg:p-4 project" data-editions="<%= project.editions_year_and_audience_id %>">
        <%= link_to project do %>  
          <%= render 'projects/project', project: project %>  
        <% end %>
      </div>
    <% end %>
  </div>

  <p class="m-4">Attività comuni:</p>

  <div class="lg:flex lg:flex-wrap">
    <% Project.where(global: true).includes(:activity_type, :audience).order(:name).each do |project| %>  
      <div class="lg:w-1/3 p-2 lg:p-4 project" data-editions="<%= project.editions_year_and_audience_id %>">
        <%= link_to project do %>  
          <%= render 'projects/project', project: project %>
        <% end %>
      </div>
    <% end %>
  </div>

  <h2 class="title py-2">Le risorse</h2>

  <div class="lg:w-1/4">
    <% @area.resource_containers.order(:name).each do |resource_container| %>  
      <%= render resource_container %>  
    <% end %>
  </div>
</div>
