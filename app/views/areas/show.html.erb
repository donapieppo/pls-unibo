<div class="w-full h-3/5 overflow-hidden" 
     style="background-size: cover; background: no-repeat fixed center url(<%= asset_pack_path(area_image(@area)) %>)">
     <div class="m-8 text-4xl lg:text-8xl text-white"><%= @area %></div>
</div>
<div class="relative">
  <div class="lg:absolute lg:-top-16 lg:max-w-6xl lg:right-8 bg-blue-100 text-gray-900 font-light text-xl text-justify rounded-xl p-8 border-gray-900 border-4">
    <%= @area.description %>
  </div>
  <div class="text-white text-xl text-justify p-8">
    <%= @area.description %>
  </div>
</div>
<div class="text-right text-xl my-8">
  <h2 class="title">Le attivit√†</h2>
  <% @area.activities.includes(:activity_type, :audience).order(:name).each do |activity| %>  
    <div class="border-r-4 border-blue-400 px-8 mx-8 my-4">
      <%= link_to [:edit, activity] do %>  
        <%= activity.name %><br/> 
        <span class="text-sm">(<%= activity.activity_type %> per <%= activity.audience %>)</span>
      <% end %>
    </div>
  <% end %>
</div>
