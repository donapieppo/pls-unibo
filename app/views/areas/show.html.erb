<div class="w-full h-3/5 overflow-hidden" 
     style="background: no-repeat fixed center url(<%= asset_pack_path(area_image(@area)) %>); background-size: cover;">
     <div class="m-8 text-5xl lg:text-8xl text-white">
       <%= @area %>
     </div>
</div>

<div class="lg:relative">
  <div class="relative lg:ml-auto -top-16 lg:right-8 lg:max-w-6xl mx-2 bg-blue-100 text-gray-900 font-light lg:text-lg lg:text-xl text-justify rounded-xl p-6 border-gray-900 border-4">
    <%= @area.description %>
    <div class="text-sm text-right mt-4">
      <%= @area.contact %>
    </div>
  </div>
</div>

<div class="text-xl">
  <h2 class="title py-4">Le attività</h2>
  <div class="lg:flex lg:flex-wrap">
    <% @area.projects.includes(:activity_type, :audience).order(:name).each do |project| %>  
      <div class="lg:w-1/2 p-2 lg:px-8 lg:py-4">
        <%= render 'project', project: project %>  
      </div>
    <% end %>
  </div>

  <h2 class="title py-4">Attività comuni</h2>
  <div class="lg:flex lg:flex-wrap">
    <% Project.where(global: true).includes(:activity_type, :audience).order(:name).each do |project| %>  
      <div class="lg:w-1/2 p-2 lg:px-8 lg:py-4">
        <%= render 'project', project: project %>
      </div>
    <% end %>
  </div>

  <h2 class="title py-4">Risorse</h2>
  <% @area.resource_containers.order(:name).each do |resource_container| %>  
    <h3><%= resource_container.name %></h3>
    <% resource_container.resources.each do |ri| %>  
      <div>
        <%= render ResourceComponent.new(ri) %>
      </div>
    <% end %>
  <% end %>
</div>

