<div class="container">
  <h1>Scuole</h1>

  <table class="table">
    <% @schools.each do |school| %>  
      <tr>
        <td><%= school.id %></td>
        <th><%= school.name %></th>
        <td><%= school.code %></td>
        <td>
          <% unless school.web_url.blank? %>  
            <%= link_to school.web_url, school.web_url, target: "_new" %>
          <% end %>
        </td>
        <td><%= school.school_type %></td>
      </tr>
    <% end %>
  </table>
</div>
