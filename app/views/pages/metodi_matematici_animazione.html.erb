<script src="https://cdn.babylonjs.com/babylon.js"></script>

<div class="lg:flex">
  <div class="w-full lg:w-1/2">
    <canvas id="c" class="w-full lg:w-auto lg:h-full"></canvas>
  </div>
  <div class="w-full lg:w-1/2 lg:pr-24 text-center text-pls text-4xl lg:text-6xl pt-8 lg:pt-16" style="background-color: #f0f0f0">
    <%= @edition.name %><br/>

    <h2 class="font-bold text-2xl tracking-tight py-6 text-center text-pls lg:mt-24">
      <%= @edition.academic_year_to_s %>
    </h2>

    <h3 class="my-8 lg:my-16">
      Corso tenuto da<br/>
      Gian Marco Todesco
    </h3>
  </div>
</div> 

<div class="container">
  <%= render Activity::AttributesComponent.new(@edition.project) %>  
</div>

<div class="container my-8">
  <%= render Page::EditionComponent.new(@edition, current_user) %>
</div>

<div class="container">
  <%= link_to 'Edizioni precedenti del corso', project_path(1), class: 'underline text-lg' %>  
</div>

<%= javascript_tag do %>  
  <%= render partial: 'metodi_matematici_animazione', formats: :js %>  
<% end %>
