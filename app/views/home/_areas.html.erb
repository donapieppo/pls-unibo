<div id="areas" class="md:flex md:flex-wrap px-8 md:px-24">
  <% areas.each do |area| %>  
    <% if (! current_user) && [2,5].include?(area.id) %>  
      <% url = ACCROCCHIO_VECCHIO_SITO[area.id] %>  
    <% else %>
      <% url = area_root(area) %>  
    <% end %>

    <div class="md:w-1/2 lg:w-1/3 xl:w-1/4 px-4 my-8">
      <%= link_to url do %>  
        <%= render Area::HomeCardComponent.new(area) %>  
      <% end %>
    </div>
  <% end %>
</div>


