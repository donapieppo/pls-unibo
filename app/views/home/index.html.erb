<div class="lg:flex lg:flex-wrap mx-2 lg:mx-6">
  <% @areas.each do |area| %>  
    <%= link_to area do %>  
      <div class="lg:w-1/3 lg:p-2">
        <div class="relative border-2 border-gray-200 shadow-xl rounded-xl p-2 my-4">
          <div class="absolute -top-2 -right-2 bg-blue-300 rounded-xl p-4">
            <%= area_icon(area, size: 40) %>
          </div>
          <h2 class="m-6 inline align-text-bottom text-2xl text-blue-400">
            <%= area.name %>
          </h2>
          <div class="mt-6 text-sm whitespace-pre-line text-gray-600">
            <%= area.description %>  
          </div>
          <div class="text-right mt-3 text-sm">
            <%= link_to 'edit', [:edit, area] %>  
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
