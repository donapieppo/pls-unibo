<div class="lg:flex lg:flex-wrap mx-2 lg:mx-6">
  <% @areas.each do |area| %>  
    <%= link_to area do %>  
      <div class="lg:w-1/3 lg:p-2">
        <%= link_to area do %>
          <div class="relative border-2 border-gray-200 shadow-xl rounded-xl p-2 my-6 h-72" 
               style="background: no-repeat center url(<%= asset_pack_path(area_image(area)) %>); background-size: cover;">
               <div class="absolute -bottom-2 -right-2 bg-white bg-opacity-75 rounded-xl p-4 px-8 border-2 border-black">
                 <h2 class="m-6 inline align-text-bottom text-2xl"><%= area.name %></h2>
                 <div class="text-right mt-1 text-sm">
                   Rsponsabile: <%= area.contact %> 
                 </div>
               </div>
               <div class="absolute rounded-xl p-4 px-8 -top-2 -right-2 bg-white bg-opacity-75 border-2 border-black">
                 <%= area_icon(area, size: 30) %>
               </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <div class="lg:w-1/3 lg:p-2">
    <div class="border-2 border-gray-200 shadow-xl rounded-xl p-2 my-6 h-72 bg-green-100 text-gray-500">
      <h2>Partecipanti</h2>
      <% Organization.order(:name).each do |org| %>
        <div class="pl-4 m-1"><%= org %></div>
      <% end %>
    </div>
  </div>
</div>

