<div class="container">
  <h1 class="title">Risultati ricerca</h1>

  <div class="text-center font-bold text-xl">
    &ldquo;<%= @txt %>&rdquo;
  </div>

  <ul class=" ml-4 list-disc">
    <% @activities.each do |activity| %>  
      <li class="my-2">
        <%= link_to activity.to_s, activity, class: 'underline' %>
        (<%= t activity.class.to_s.downcase %> <%= activity.academic_year %>)
      </li>
    <% end %>
  </ul>

  <% if current_user && current_user.staff? %>
    <ul class=" ml-4 list-disc">
      <% @schools.each do |school| %>  
        <li><%= link_to school.to_s, school %></li>
      <% end %>
    </ul>
  <% end %>
</div>
