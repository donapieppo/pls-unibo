<div class="container">
  <h1 class="title">Risultati ricerca</h1>
  <div class="text-center font-bold text-2xl">&ldquo;<%= @txt %>&rdquo;</div>

  <ul class="list-disc">
    <% @activities.each do |activity| %>  
      <li class="my-2">
         <%= link_to activity, activity, class: 'underline' %>
         (<%= t activity.class.to_s.downcase %> <%= activity.academic_year %>)
      </li>
    <% end %>
  </ul>

  <ul>
    <% @schools.each do |school| %>  
      <li><%= link_to school, school %></li>
    <% end %>
  </ul>
</div>
