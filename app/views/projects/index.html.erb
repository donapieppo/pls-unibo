<div class="container">
  <% if @on %>  
    <h1 class="title">Le attività del PLS in corso</h1>
  <% elsif @bookable_now %>  
    <h1 class="title">Le attività del PLS prenotabili</h1>
  <% else %>
    <h1 class="title">Le attività del PLS</h1>
  <% end %>

  <div class="text-center my-4">
    <%= link_to('Nuova Attività', new_project_path, class: 'button') if policy(:project).new? %>  
  </div>

  <% if (@on || @bookable_now) %>  
    <%= link_to 'Vedi tutte le attività del PLS', projects_path, class: 'underline' %>  
  <% else %>
    <div class="p-4">
      <%= render partial: 'filters' %>  
    </div>
  <% end %>

  <div class="lg:flex lg:flex-wrap">
    <% @projects.each do |project| %>  
      <div class="lg:w-1/2 p-2 lg:p-4 project" data-years="<%= project.cache_years %>" 
                                               data-audiences="<%= project.editions_audience_ids %>" 
                                               data-areas="<%= project.area_ids + project.interested_area_ids %>" 
                                               data-activity_types="<%= project.parent_id ? [project.parent_id] : [] %>">
                                               <%= link_to project do %>  
                                                 <%= render 'project',  project: project %>  
                                               <% end %>
      </div>
    <% end %>
  </div>
</div>
