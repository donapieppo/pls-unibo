<div class="container">
  <h1 class="title"><%= link_to @project, @project %></h1>

  <div class="lg:flex">
    <div class="lg:w-2/3 pr-4">
      <%= render partial: 'form' %>  
    </div>
    <div class="lg:w-1/3">
      <%= render ContactsComponent.new(what: @project, can_add: policy(@project).edit?) %>

      <div class="pls-card my-4">
        <div class="pls-card-title">EDIZIONI</div>
        <div class="pls-card-content">
          <% @editions.each do |edition| %>  
            <div class="my-1 p-2 hover:bg-gray-100">
              <%= link_to [:edit, edition] do %> 
                <span class="text-sm">
                  <%= edition.academic_year_to_s %>
                </span>
                <%= edition.name %> 
              <% end %>
              <span class="float-right mx-2">
                <%= link_to_delete edition %>
              </span>
            </div>
          <% end %>
        </div>
        <%= link_to 'Nuova edizione', new_project_edition_path(@project), class: 'button' %>  
      </div>
    </div>
  </div>
</div>
