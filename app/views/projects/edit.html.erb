<h1 class="title">Modifica attivit√†</h1>

<div class="lg:flex">
  <div class="lg:w-2/3">
    <%= render partial: 'form' %>  
  </div>
  <div class="lg:w-1/3 pt-8">
    <%= render ContactsComponent.new(what: @project, can_add: policy(@project).edit?) %>

    <h2>Edizioni</h2>
    <div class="m-4">
      <% @editions.each do |edition| %>  
        <div class="my-1 p-2 border-2 rounded hover:bg-gray-100">
          <%= link_to [:edit, edition] do %> 
            <i class="fas fa-chevron-right mr-2"></i> 
            <%= edition.name %> 
          <% end %>
          <span class="float-right mx-2">
            <%= link_to_delete edition %>
          </span>
          <span class="float-right border-2 bg-blue-100 rounded-xl px-2">
            <%= edition.academic_year %>
          </span>
        </div>
      <% end %>
    </div>
    <%= link_to 'Nuova edizione', new_project_edition_path(@project), class: 'button' %>  
  </div>
</div>
