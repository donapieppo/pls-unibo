<div class="container">
  <h1 class="title"><%= link_to @project, @project %></h1>

  <div class="text-center text-2xl my-2">
    <%= link_to_delete_if_deletable @project %>
  </div>

  <div class="lg:flex">
    <div class="lg:w-2/3 pr-4">
      <%= render partial: 'form' %>  
    </div>
    <div class="lg:w-1/3">
      <%= render EditContactsComponent.new(what: @project, can_add: policy(@project).edit?) %>
      <%= render EditResourcesComponent.new(what: @project) %>

      <div class="pls-card my-4">
        <div class="pls-card-title">EDIZIONI</div>
        <div class="pls-card-content">
          <% @project.editions.order('academic_year desc').each do |edition| %>  
            <div class="hover:bg-yellow-100 p-1">
              <%= link_to [:edit, edition] do %>
                <div class="text-sm mt-2 text-gray-700">
                  <%= edition.academic_year_to_s %>
                </div>
                <div class="">
                  <%= edition.name %> 
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= link_to 'Nuova edizione', new_project_edition_path(@project), class: 'button' %>  
      </div>
    </div>
  </div>
</div>
