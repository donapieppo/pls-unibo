<h1 class="title"><%= @project %></h1>

<h2 class="text-lg text-right mx-8">
  <%= @project.activity_type %> - <%= @project.audience %><br/>
  Organizzato da 
  <% @project.areas.each do |area| %>  
    <%= link_to area, area %>  
  <% end %>
</h2>

<div class="ml-auto my-4 p-4 lg:mr-4 lg:max-w-6xl bg-blue-100 text-gray-900 font-light text-lg text-justify rounded-xl border-gray-900 border-4">
  <%= @project.description %>  
</div>

<div class="mt-4">
  <% @editions.each do |edition| %>  
    <div class="lg:w-1/2 mx-auto p-4 ">
      <div class="inline bg-yellow-100 border-2 border-yellow-400 p-4 text-xl rounded-full -mx-4">
        <%= edition.name %> (<%= edition.academic_year %>)
      </div>
      <div class="text-gray-600 text-justify mt-8">
        <%= edition.description %>  
      </div>
    </div>
  <% end %>
</div>


