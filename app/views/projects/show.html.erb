<div class="container">
  <% if !@project.activity_type.description.blank? %>
    <div class="mx-auto text-center text-xl mt-4 max-w-xl bg-pls-flash rounded-2xl p-2">
      <%= @project.activity_type.description.upcase %>  
    </div>
  <% end %>

  <h1 class="title">
    <%= @project %>
  </h1>

  <div class="md:flex my-8 md:my-16">
    <div class="md:w-2/3 md:pr-4">
      <div class="text-lg">
        <%= simple_format @project.description.upcase %>  
      </div>

      <div class="my-8 max-w-5xl text-gray-900 text-justify">
        <%= @project.details %>  
      </div>
    </div>
    <div class="md:pl-4 md:w-1/3 text-right">
      <%= link_to_edit_if_editable @project, msg: ' Modifica i dati del progetto.' %>
      <%= render Activity::AttributesComponent.new(@project) %>  
    </div>
  </div>

  <% @editions.each do |edition| %>  
    <%= render Edition::CardComponent.new(edition) %>
  <% end %>
</div>
