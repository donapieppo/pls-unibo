<div class="container">
  <div class="text-center text-2xl mt-4">
    <%= @project.activity_type.name.upcase if @project.activity_type %>  
  </div>

  <h1 class="title">
    <%= @project %>
  </h1>

  <div class="md:flex md:flex-row-reverse my-8 md:my-16">
    <div class="md:pl-4 md:w-1/4">
      <%= render Project::AttributesComponent.new(@project) %>  
      <div class="text-right">
        <%= link_to_edit_if_editable @project, msg: ' Modifica i dati del progetto' %>
      </div>
    </div>
    <div class="md:grow md:pr-4">
      <div class="max-w-5xl text-lg">
        <%= simple_format @project.description.upcase %>  
      </div>

      <div class="my-8 max-w-5xl text-gray-900 text-justify">
        <%= @project.details %>  
      </div>
    </div>
  </div>
</div>

<% @editions.each do |edition| %>  
  <div class="relative border-t-4 border-pls-strong pt-8 mt-16">
    <div class="container">
      <div class="border-4 border-pls-strong bg-gray-50 text-xl lg:text-3xl font-bold absolute -top-8 text-pls p-2 lg:p-4 px-8 rounded-2xl tracking-wider">
        <%= link_to edition.academic_year_to_s, edition %>
      </div>
      <% @short = ! edition.this_academic_year? %>  
      <%= render Edition::EditionComponent.new(edition, current_user, short: @short, title_if_different_from: @project.name) %>
    </div>
  </div>
<% end %>
