<h1 class="title">
  <%= @project %>
  <%= link_to_edit_if_editable @project %>
</h1>


<h2 class="text-lg text-right mx-8">
  <%= @project.activity_type %> - <%= @project.audience %><br/>
  Organizzato da 
  <% @project.areas.each do |area| %>  
    <%= link_to area, area %>  
  <% end %>
</h2>

<div class="ml-auto my-4 p-4 lg:mr-4 lg:max-w-6xl bg-blue-100 text-gray-900 font-light text-lg text-justify rounded-xl border-gray-900 border-4">
  <%= simple_format @project.description %>  
</div>
<div class="text-right my-4 mx-8 text-gray-700">
  <%= @project.details %>  
</div>

<div class="mt-4 lg:w-1/2 mx-auto p-4">
  <h2>Edizioni</h2>
  <% @editions.each do |edition| %>  
    <div>
      <div class="p-2 text-xl border-l-4">
        <%= link_to edition do %>  
          <%= edition.name %> (<%= edition.academic_year %>)
          <%= link_to_edit_if_editable edition %>
        <% end %>
      </div>
      <div class="text-gray-600 text-justify mt-8">
        <%= simple_format edition.description %>  
        <hr/>
        <div class="italic">
          <%= edition.details %>  
        </div>
      </div>
    </div>
  <% end %>
</div>
