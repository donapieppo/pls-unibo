<div class="m-auto max-w-6xl mx-4 lg:mx-auto">
  <h2 class="py-2 pt-16 pb-8">
    <span class="text-6xl pr-4 text-pls-light"><i class="fas fa-bullseye"></i></span>
    <%= @project.activity_type.name.upcase %> - <span class="text-lg text-gray-700"><%= @project.audience %></span>
  </h2>

  <h1 class="text-4xl lg:text-6xl font-extrabold tracking-tight text-left py-2">
    <%= @project %>
  </h1>

  <div class="text-right">
    Organizzato da 
    <% @project.areas.each do |area| %>  
      <%= link_to area, area %>  
    <% end %> <br/>
    Contatti: <%= @project.contacts.map(&:name).join(', ') %>  
  </div>
  <div class="text-right">
    <%= link_to_edit_if_editable @project %>
  </div>
</div>

<div class="text-right my-16 mx-4 lg:max-w-6xl lg:mx-auto">
  <%= simple_format @project.description %>  
</div>

<div class="text-right my-4 mx-8 text-gray-700">
  <%= @project.details %>  
</div>

<h2 class="title">Edizioni</h2>

<div class="py-4">
  <% @editions.each do |edition| %>  
    <%= render(EditionComponent.new(edition: edition, can_edit: policy(edition).edit?)) %>
  <% end %>
</div>
