<div class="m-auto max-w-6xl mx-4 lg:mx-auto">
  <h2 class="py-2 pt-16 pb-8">
    <span class="text-6xl pr-2 text-pls-light">
      <i class="fas fa-bullseye"></i>
    </span>
    <%= @project.activity_type.name.upcase %>  
  </h2>

  <h1 class="title">
    <%= @project %>
  </h1>

  <div class="text-right">
    <div>
      Organizzato da 
      <% @project.areas.each do |area| %>  
        <%= link_to area, area %>  
      <% end %> 
    </div>
    <div>
      Contatti: 
      <% @project.contacts.each do |c| %>
        <%= mail_to c.email, c.name %>
      <% end %>
    </div>
    <div>
      Aree di interesse:
      <% @project.interested_areas.each do |a| %>
        <%= link_to a.name, a, class: 'border px-2 py-1' %>  
      <% end %>
    </div>
  </div>
  <div class="text-right">
    <%= link_to_edit_if_editable @project %>
  </div>
</div>

<div class="text-right my-8 mx-4 lg:max-w-6xl lg:mx-auto">
  <%= simple_format @project.description %>  
</div>

<div class="text-right my-4 mx-8 text-gray-700">
  <%= @project.details %>  
</div>

<% @editions.each do |edition| %>  
  <div class="py-8 bg-white">
    <%= render EditionComponent.new(edition: edition) %>
  </div>
<% end %>
