<div class="py-6">
  <div class="mx-auto max-w-lg text-center border-4 border-eden-500 shadow-lg bg-gray-50 shadow-md py-4">
    <%= image_pack_tag 'media/images/Logo_PLS_s.png', style: "width: 200px; margin: auto" %>

    <div class="my-4">
    Puoi usare il tuo account Google per <br/>
    accedere alle pagine del PLS Unibo e 
    <ul class="my-2 p-2 list-inside rounded-xl">
      <li>iscriverti,</li>
      <li>prenotare,</li>
      <li>aggiornare i tuoi dati.</li>
    </ul>

    <div class="text-center">
      <%= form_tag(google_login_url, method: 'post') do %>
        <input type="submit" value="Accedi con Google" />
      <% end %>

      <%= form_tag(shibboleth_login_url, method: 'post') do %>
        <input type="submit" value="Accedi in Unibo" />
      <% end %>
    </div>

    <% if Rails.env.development? %>  
      <div class="text-center">
        <%= form_tag(developer_login_url, method: 'post') do %>
          <input type="submit" value="Entra in test" class="button"></input>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
