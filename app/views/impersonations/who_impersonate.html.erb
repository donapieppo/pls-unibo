<div class="container">
  <h1 class="title">Impersonate</h1>

  <ul>
    <% @users.each do |user| %>
      <li>
        <%= button_to "#{user.cn_militar} (#{user.email})", impersonate_path(user) %> 
        <%= exclamation_icon if user.staff? %>
        <%= exclamation_icon if user.teacher? %>
      </li>
    <% end %>
  </ul>
</div>
