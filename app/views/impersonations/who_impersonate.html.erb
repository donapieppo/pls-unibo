<div class="container">
  <h1 class="title">Impersonate</h1>

  <ul>
    <% @users.each do |user| %>
      <li>
        <%= button_to "#{user.cn_militar} (#{user.email})", impersonate_path(user) do %> 
          <%= user.cn_militar %>
          <%= exclamation_icon if user.staff? %> staff
          <%= exclamation_icon if user.teacher? %> docente
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
