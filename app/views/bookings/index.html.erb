<div class="container">
  <h1 class="title">Iscrizioni</h1>
  <% @bookiable_activities.each do |a| %>  
    <h2 class=""><%= link_to a, a %></h2>
    <div>
      <%= l a.booking_start %> - <%= l a.booking_end %>    
    </div>
    <p>Elenco iscritti:</p>
    <ul class="list-disc">
      <% a.bookings.order(:created_at).each do |b| %>  
        <li>
          <small><%= l b.created_at %></small> <%= b.user %> <%= b.name %> <%= b.surname %> <%= b.role %> (<%= b.email %>) <%= link_to_delete b %> <%= link_to(edit_icon, [:edit, b.user]) if b.user %>     
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
