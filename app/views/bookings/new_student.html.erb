<div class="container">
  <h1 class="title">
    Iscrivi uno studente <%= 'in remoto' if @booking.online %>  
  </h1>

  <div class="info my-8">
  <p>Sei registrato come docente.</p>
  <p>Puoi iscrivere i tuoi studenti fornendo il loro nome, cognome e la loro email.</p>
  </div>

  <%= form_with url: [:create_student, @activity, :bookings] do |f| %>  
    <% if @booking.errors.any? %>
      <% @booking.errors.full_messages.each do |message|%>
        <div class="alert"><%= message %></div>
      <% end %>
    <% end %>

    <%= f.hidden_field :online %>

    <div>
      <%= f.label 'Email dello studente' %>
      <%= f.text_field :email %>
    </div>

    <div>
      <%= f.label :name, 'Nome dello studente' %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :surname, 'Cognome dello studente' %>
      <%= f.text_field :surname %>
    </div>

    <div>
      <%= f.label :notes, 'Note (facoltative)' %>
      <%= f.text_area :notes %>
    </div>

    <%= f.submit "Iscrivi lo studente" %>  
  <% end %>
</div>
