<div id="modal-menu" style="display: none" onclick="toggle_menu();" class="ease-linear transition-all duration-500">
  <div class="h-screen overflow-x-hidden fixed inset-0 z-50 outline-none focus:outline-none ease-linear transition-all duration-500">
    <div class="h-screen relative float-left w-full lg:w-1/3 ">
      <div class="h-screen flex flex-col items-center bg-white border-r-4 border-eden-strong shadow-lg py-4">
        <div class="w-1/3 text-center">
          <%= link_to image_pack_tag('Logo_PLS_s.png'), root_path %>
        </div>
        <div class="menu-items">
          <div class='menu-items-item'><%= link_to 'home', root_path %></div>
          <div class='menu-items-item'><%= link_to 'presentazione', presentation_path %></div>  
          <div class='menu-items-item'><%= link_to 'attivitÃ ', projects_path %></div>  
          <div class='menu-items-item'><%= link_to 'contatti', contacts_page_path %></div>  
          <div class='menu-items-item'><%= link_to 'privacy', privacy_path %></div>  
          <% if current_user && current_user.staff? %>  
            <div class="my-8">Admin</div>
            <div class='menu-items-item'><%= link_to 'risorse', resources_path %></div>  
            <div class='menu-items-item'><%= link_to 'contatti', contacts_path, class: 'm-2 px-4 py-1' %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="opacity-30 fixed inset-0 z-40 bg-black"></div>
</div>

<div class="w-full flex flex-row items-center justify-center border-b border-pls py-2">
  <div class="text-4xl ml-4 px-4 py-2 text-blue-900">
    <a href="javascript:void(0);" id="modal-opener" onclick="toggle_menu();"><i class="fas fa-bars"></i></a>
  </div>
  <div class="flex-grow px-4 text-center">
    <%= link_to 'PLS', root_path, class: "margin-auto text-xl lg:text-2xl px-4 py-2 font-light text-blue-900 border-2 border-blue-900 font-bold tracking-widest rounded-2xl" %>
  </div>
  <div class="mx-4">
    <% if current_user %>  
      <%= link_to logout_icon, logout_path, class: 'text-xl float-right p-1 px-2' %>
      <%= link_to myedit_users_path do %>  
        <span class="rounded-full border-2 border-pls text-pls float-right font-bold py-1 px-4">
          <%= current_user.initials %>
        </span>
      <% end %>
    <% else %>
      <%= link_to 'accedi', login_path, class: 'float-right p-1 px-2 border ' %>
    <% end %>
  </div>
</div>

<%= javascript_tag do %>  
  function toggle_menu() {
  var modal = document.getElementById("modal-menu");
  modal.style.display = (modal.style.display == 'none') ? 'block' : 'none';
  }
<% end %>
