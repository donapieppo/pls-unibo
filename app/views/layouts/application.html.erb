<!DOCTYPE html>
<html lang="it">
  <head>
    <%= render 'layouts/seo' %>  
    <title>PlsUnibo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="w-100 h-screen">
      <div style="position: fixed; z-index: -1000; opacity: 0.3" class="text-pls-light">
        <i class="fas fa-atom" style="font-size: 1000px"></i>
      </div>
      <%= render partial: 'layouts/menu' %>  

      <%= render FlashMessagesComponent.new(flash: flash) %>
      <%= yield %>

      <%= render partial: 'layouts/footer' %>  
    </div>
  </body>
</html>
