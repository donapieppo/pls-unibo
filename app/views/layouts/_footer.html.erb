  <div class="container md:flex md:flex-wrap">
    <div class="md:w-1/2 my-2">
      <div class="">
        <%= form_tag search_path do %>  
          <input class="border-2 border-gray-300 bg-white px-2 py-1 pr-1 rounded-lg text-sm focus:outline-none" type="search" name="search" placeholder="cerca"/>
        <% end %>
      </div> 
      <div class="w-32 my-4">
      <%= link_to 'https://www.pianolaureescientifiche.it/' do %>  
          <%= image_pack_tag('media/images/Logo_PLS_s.png') %>
        <% end %>
      </div>
    </div>
    <div class="md:w-1/2 text-xs">
      <% Organization.order(:name).each do |org| %>
