<div class="mx-4">
  <%= simple_form_for [@resource, @resource_item] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :name %>  
    <%= f.input :url %>  

    <% if @resource_item.document.attached? %>
      <%= link_to url_for(@resource_item.document) do %>  
        <% if @resource_item.document.previewable? %>  
          <%= image_tag @resource_item.document.preview(resize_to_limit: [250, 250]) %>  
        <% elsif @resource_item.document.image? %>
          <%= link_to image_tag(@resource_item.document.variant(resize_to_limit: [250, 250])), url_for(@resource_item.document) %>
        <% else %>  
          <div class="button">Download</div>
        <% end %>
      <% end %>
    <% end %>

    <%= f.input :document %>  
    <%= f.input :credits %>  
    <%= f.button :submit %>
  <% end %>
</div>

