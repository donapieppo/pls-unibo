<div class="container">
  <h1 class="title">
    <%= @resource %>
  </h1>

  <div class="lg:flex">
    <div class="lg:w-2/3 p-2">
      <%= render 'form', resource: @resource %>
    </div>
    <div class="lg:w-1/3 p-2">
      <div class="pls-card">
        <div class="pls-card-title">Risorsa associata a:</div>
        <div class="pls-card-content">
          <ul class="list-none">
            <% @resource.resource_containers.each do |rc| %>  
              <li><i class="fa-solid fa-chevron-right mx-2"></i> <%= link_to rc, rc %></li>
            <% end %>
            <% @resource.activities.each do |activity| %>  
              <li><i class="fa-solid fa-chevron-right mx-2"></i> <%= link_to activity, activity %></li>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
