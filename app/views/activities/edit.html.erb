<div class="lg:flex">
  <div class="lg:w-2/3">
    <%= render partial: 'form' %>  
  </div>
  <div class="lg:w-1/3 pt-8">
    <h2 class="text-xl">Edizioni</h2>
    <div class="my-2">
      <% @activity.editions.each do |edition| %>  
        <%= link_to [:edit, edition] do %> 
          <div class="my-1 p-2 border-2 rounded hover:bg-gray-100">
            <i class="fas fa-chevron-right mr-2"></i> 
            <%= edition.name %> 
            <span class="float-right border-2 bg-blue-100 rounded-xl px-2"><%= edition.academic_year %></span>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to 'Nuova Edizione', new_activity_edition_path(@activity), class: 'button' %>  
  </div>
</div>
