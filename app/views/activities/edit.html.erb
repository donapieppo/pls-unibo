<div class="lg:flex">
  <div class="lg:w-2/3">
    <%= render partial: 'form' %>  
  </div>
  <div class="lg:w-1/3">
    <h2>Edizioni</h2>
    <% @activity.editions.each do |edition| %>  
      <div class="py-2">
        <%= link_to [:edit, edition] do %> 
          <%= edition.name %> <span class="float-right border-2 rounded"><%= edition.academic_year %></span>
        <% end %>
      </div>
    <% end %>
    <%= link_to 'nuova edizione', new_activity_edition_path(@activity), class: 'button' %>  
  </div>
</div>
