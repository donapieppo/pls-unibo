<h1 class="title">Attività</h1>

<div>
  <% @activities.each do |activity| %>  
    <div class="border-2 my-2 p-4">
      <div class="text-xl">
        <%= activity.name %>
      </div>
      <div class="my-6 text-sm text-gray-900">
        <%= activity.description %>  
      </div>
      <div class="text-right">
        <%= link_to '<i class="fas fa-edit text-xl"></i>'.html_safe, [:edit, activity] %>
      </div>
      <ul>
        <% activity.editions.each do |edition| %>  
          <li><%= link_to edition, [:edit, edition] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<%= link_to 'Nuova Attività', new_activity_path, class: 'button' %>  
