<div class="mx-4">
  <%= simple_form_for [@resource, @resource_item] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :name %>  
    <%= f.input :url %>  
    <%= f.input :video %>  
    <%= f.input :image %>  

    <%= f.button :submit %>
  <% end %>
</div>

