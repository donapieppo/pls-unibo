<div class="m-6">
  <%= simple_form_for [@activity, @edition] do |f| %>  
    <%= f.input :academic_year, collection: (2016...2021).to_a.reverse, include_blank: false %>
    <%= f.input :name %>  
    <%= f.input :description, input_html: { cols: 80, rows: 10 } %>
    <%= f.association :audience, include_blank: false %>  
    <%= f.input :seats %>
    <%= f.submit %>  
  <% end %>
</div>
