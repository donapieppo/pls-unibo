<div class="pls-card">
  <div class="pls-card-title">
    <%= edition.name %>
  </div>
  <div class="pls-card-content">
    <div>
      <%= edition.audience %>  
    </div>
    <%= possible_label_from_array 'Contatti', edition.contacts %>
    <%= possible_label_from_array 'Relatori', edition.speakers %>
    <%= edition.description %>  
    <div class="my-4">
      <% edition.events.each do |event| %>  
        <div class="inline-block m-2 p-2 border border-pls">
          <%= l event.start_date %>  
        </div>
      <% end %>
    </div>
  </div>
</div>


