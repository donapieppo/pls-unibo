<h1 class="title">
  <%= @edition.name %> <br/>
  <span class="text-sm">in <%= link_to @edition.project.name, [:edit, @edition.project]  %></span>
</h1>

<div class="lg:flex">
  <div class="lg:w-2/3">
    <%= render partial: 'form' %>  
  </div>
  <div class="lg:w-1/3">
    <%= render ContactsComponent.new(what: @edition, can_add: policy(@edition).edit?) %>
    <%= render ContactsComponent.new(what: @edition, as: :speakers) %>

    <h2 class="text-xl">Eventi</h2>
    <div class="my-2">
      <% @edition.events.each do |event| %>  
        <%= link_to [:edit, event] do %> 
          <div class="my-1 p-2 border-2 rounded hover:bg-gray-100">
            <i class="fas fa-chevron-right mr-2"></i> 
            <%= event.name %> 
            <div class="float-right"><%= link_to 'duplica', new_event_path(from: event.id) %></div>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to 'Nuova Evento', new_edition_event_path(@edition), class: 'button' %>  
  </div>
</div>
