<h1 class="title">
  <%= @edition.name %> <br/>
  <span class="text-sm">in <%= link_to @edition.project.name, [:edit, @edition.project]  %></span>
</h1>

<div class="lg:flex">
  <div class="lg:w-2/3">
    <%= render partial: 'form' %>  
  </div>
  <div class="lg:w-1/3">
    <%= render ContactsComponent.new(what: @edition, can_add: policy(@edition).edit?) %>
    <%= render ContactsComponent.new(what: @edition, as: :speaker) %>

    <h2 class="text-xl">Eventi</h2>
    <div class="my-2">
      <% @edition.events.each do |event| %>  
        <div class="my-1 p-2 border-2 rounded hover:bg-gray-100">
          <%= link_to [:edit, event] do %> 
            <i class="fas fa-chevron-right mr-2"></i> 
            <%= event.name %> 
          <% end %>
          <span class="float-right mx-2">
            <%= link_to_delete event %>
          </span>
          <div class="float-right">
            <%= link_to clone_icon, new_event_path(from: event.id) %>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to 'Nuovo Evento', new_edition_event_path(@edition), class: 'button' %>  
  </div>
</div>
