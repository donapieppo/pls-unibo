<div class="container">
  <h1 class="title">Contenitori di Risorse</h1>

  <div class="text-center my-4">
    <%= link_to('Aggiungi risorsa', new_resource_container_path, class: 'button') if policy(:resource_container).new? %>
  </div>

  <div class="flex flex-wrap flex-col md:flex-row">
    <% @resource_containers.each do |resource_container| %>  
      <div class="md:w-1/3 lg:w-1/4 p-4 bg-yellow-100">
        <% if policy(resource_container).edit? %>  
          <%= link_to resource_container.name, [:edit, resource_container] %> 
        <% else %>  
          <p><%= resource_container.name %></p>
        <% end %>
        <% resource_container.resources.each do |resource| %>  
          <div>
            <%= render resource %>  
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
