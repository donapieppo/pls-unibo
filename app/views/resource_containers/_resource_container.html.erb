<div class="h-full border-2 border-gray-200 p-2 bg-pls rounded-xl py-4">
  <div class="text-center">
    <div class="text-xl font-medium leading-6 tracking-wide text-gray-300 cursor-pointer">
      <%= resource_container.name %>
    </div>
    <div class="inline-block bg-gray-200 rounded-full p-2 mt-2 mb-6 text-xs">
      <% areas_to_s(resource_container.areas) %>
    </div>
  </div>
  <% resource_container.resources.each do |resource| %>  
    <div class="">
      <%= render resource %>  
    </div>
  <% end %>
  <div class="text-center">
    <%= link_to_edit_if_editable resource_container %> 
    <%= link_to_delete_if_deletable resource_container %> 
  </div>
</div>
