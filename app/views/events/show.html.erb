<div class="container">
  <h1 class="title"><%= @event.name %></h1>
  <h2 class="text-center">
    in <%= link_to @event.edition.to_s, @event.edition %>  
  <%= link_to_edit_if_editable(@event) %>  
  </h2>

  <div class="date_and_place text-lg">
    <div class="py-1"><i class="fas fa-map-marker-alt fa-fw mr-2"></i><%= @event.place %></div>
    <div class="py-1"><i class="far fa-calendar fa-fw mr-2"></i><%= l @event.start_date, format: :day %></div>
    <div class="py-1"><i class="far fa-clock fa-fw mr-2"></i><%= l @event.start_date, format: :hour %></div>
    <div class="py-1">
      <% if @event.sofia %>  
        <i class="far fa-star fa-fw mr-2"></i><%= helpers.sofia_link %>
      <% end %>
      <% if @event.pcto %>  
        <i class="far fa-star fa-fw mr-2"></i>PCTO
      <% end %>
    </div>
  </div>

  <div class="md:flex my-6">
    <div class="md:w-1/2">
      <div class="pls-card">
        <div class="pls-card-content">
          <%= @event.description %>  
        </div>
        <div class="pls-card-footer">
          <% @event.contacts.each do |contact| %>  
            <div>
              <%= contact %>
            </div>
          <% end %>
          <% @event.speakers.each do |speaker| %>  
            <div>
              <%= speaker %>
            </div>
          <% end %>
          <% if @event.google_map %>  
            <%= raw @event.google_map %>
          <% end %>
        </div>
      </div>

      <% if current_user %>  
        <div class="text-4xl text-center">
          <% if @event.booked_by?(current_user) %>
            HAI PRENOTATO
          <% end %>
        </div>

        <% @event.bookings.by_teacher(current_user).each do |booking| %>  
          <p>Hai prenotato per <%= booking.user %></p>
        <% end %>
      <% end %>
    </div>
    <div class="md:w-1/2">
      <div class="px-8 text-center md:max-w-xl m-auto">
        <% @event.resources.each do |resource| %>  
          <%= render resource %>  
        <% end %>
      </div>
    </div>
  </div>
</div>
