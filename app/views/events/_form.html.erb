<div class="m-6">
  <%= simple_form_for [@edition, @event] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :place %>
    <%= f.input :start_date, minute_step: 10 %>
    <%= f.input :duration %>
    <%= f.input :seats %>
    <%= f.input :sofia %>
    <%= f.input :pcto %>
    <%= f.input :bookable %>  
    <%= f.input :booking_start, minute_step: 10 %>
    <%= f.input :booking_end, minute_step: 10 %>
    <%= f.submit %>
  <% end %>
</div>
