<div class="container">
  <h1 class="title">
    <%= link_to @event.to_s, @event %> 
  </h1>

  <div class="text-center text-2xl my-2">
    <%= link_to_delete "", @event %>
    <%= link_to clone_icon, new_event_path(from: @event.id) %>
    <%= link_to link_icon, @event, title: "Vai alla pagina" %>
  </div>

  <div class="text-center">
    in <%= link_to @event.edition.name, [:edit, @event.edition], class: 'underline' %>
  </div>

  <div class="lg:flex">
    <div class="lg:w-2/3 p-4">
      <%= render 'form' %>
    </div>
    <div class="lg:w-1/3 p-4">
      <%= render Contact::EditComponent.new(what: @event, can_add: policy(@event).edit?) %>
      <%= render Contact::EditComponent.new(what: @event, as: :speaker) %>
      <%= render Resourceable::EditResourcesComponent.new(@event, current_user) %>
    </div>
  </div>
</div>
