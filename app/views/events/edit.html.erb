<h1 class="title">
  <%= @event %> <br/>
  <span class="text-sm">in <%= link_to @event.edition.name, [:edit, @event.edition] %></span>
</h1>

<div class="lg:flex">
  <div class="lg:w-2/3">
    <%= render 'form' %>
  </div>
  <div class="lg:w-1/3">
    <%= render ContactsComponent.new(what: @event, can_add: policy(@event).edit?) %>
    <%= render ContactsComponent.new(what: @event, as: :speakers) %>
  </div>
</div>
</div>

