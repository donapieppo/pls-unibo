<div class="container">
  <h1 class="title">
    <%= @event %> 
  </h1>

  <div class="text-center text-2xl my-2">
    <%= link_to_delete @event %>
    <%= link_to clone_icon, new_event_path(from: @event.id) %>
  </div>

  <div class="text-center">
    in <%= link_to @event.edition.name, [:edit, @event.edition], class: 'button' %>

  </div>

  <div class="lg:flex">
    <div class="lg:w-2/3">
      <%= render 'form' %>
    </div>
    <div class="lg:w-1/3">
      <%= render ContactsComponent.new(what: @event, can_add: policy(@event).edit?) %>
      <%= render ContactsComponent.new(what: @event, as: :speaker) %>
      <%= render ResourcesComponent.new(what: @event) %>
    </div>
  </div>
</div>
