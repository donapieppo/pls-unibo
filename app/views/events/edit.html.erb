<h1 class="title">
  <%= @event %> <br/>
  <span class="text-sm">in <%= link_to @event.edition.name, [:edit, @event.edition] %></span>
</h1>

<div class="lg:flex">
  <div class="lg:w-2/3">
    <%= render 'form' %>
  </div>
  <div class="lg:w-1/3">
    <label>Contatti</label>
    <div class="my-2">
      <% @event.contacts.each do |contact| %>  
        <div><%= contact %></div>
      <% end %>
    </div>
    <%= link_to 'Nuovo contatto', choose_contact_event_path(@event), class: 'button' %>
  </div>
</div>
</div>

