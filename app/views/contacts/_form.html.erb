<div class="w-3/4 lg:w-1/2 mx-auto">
  <%= simple_form_for [@what, @contact] do |f| %>  
    <input type="hidden" name="as" value="<%= @as %>"/>
    <%= f.input :name %>  
    <%= f.input :surname %>  
    <%= f.input :email %>  
    <%= f.input :web_page %>  
    <%= f.input :affiliation %>  
    <%= f.input :description %>  
    <div>
      <% if @contact.avatar.attached? %>
        <%= image_tag @contact.avatar.variant(resize_to_limit: [250, 250]), class: 'rounded p-0 m-0' %>
        <%= link_to_delete delete_avatar_contact_path(@contact) %>  
      <% else %>
        <%= f.input :avatar %>  
      <% end %>
    </div>
    <%= f.submit %>  
  <% end %>
</div>
