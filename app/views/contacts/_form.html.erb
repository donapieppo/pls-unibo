<div class="w-3/4 lg:w-1/2 mx-auto">
  <%= simple_form_for [@what, @contact] do |f| %>  
    <input type="hidden" name="as" value="<%= @as %>"/>
    <%= f.input :name %>  
    <%= f.input :surname %>  
    <%= f.input :email %>  
    <%= f.input :web_page %>  
    <%= f.input :affiliation %>  
    <%= f.input :description %>  
    <%= f.submit %>  
  <% end %>
</div>
