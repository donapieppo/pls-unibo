<div class="container lg:w-1/2 mx-auto">
  <%= simple_form_for [@what, @contact] do |f| %>  
    <input type="hidden" name="as" value="<%= @as %>"/>
    <%= f.input :name %>  
    <%= f.input :surname %>  
    <%= f.input :email %>  
    <%= f.input :web_page %>  
    <%= f.input :affiliation %>  
    <%= f.input :description %>  
    <% unless @contact.avatar.attached? %>
      <%= f.input :avatar %>  
    <% end %>
    <%= f.submit %>  
  <% end %>
</div>

<% if @contact.avatar.attached? %>
  <div class="container text-center">
    <%= image_tag @contact.avatar.variant(resize_to_limit: [250, 250]), class: 'rounded p-0 my-4 block mx-auto' %>
    <%= link_to_delete "Cancella l'immagine", delete_avatar_contact_path(@contact) %>  
  </div>
<% end %>

