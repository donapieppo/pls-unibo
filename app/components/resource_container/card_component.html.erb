<div class="flex flex-col h-full border-2 border-gray-200 rounded-2xl my-2 bg-gray-100">
  <div class="text-center text-pls bg-gray-200 rounded-t-xl py-4">
    <div class="text-lg font-semibold leading-6 tracking-wide">
      <%= @resource_container.name.upcase %>
    </div>
  </div>
  <div class="flex-grow p-2">
    <% @resource_container.resources.each do |resource| %>  
      <div class="inline-block">
        <%= render Resource::ResourceComponent.new(resource) %>  
      </div>
    <% end %>
  </div>
  <div class="text-right bg-gray-100 border-t border-gray-200 rounded-b-xl p-4 text-sm">
    <%= helpers.areas_to_s(@resource_container.areas) %>
    <% if @resource_container_policy.edit? %>  
      <%= link_to helpers.edit_icon, [:edit, @resource_container] %>
    <% end %>
    <% if @resource_container_policy.destroy?  %>  
      <%= helpers.link_to_delete @resource_container %> 
    <% end %>
  </div>
</div>

