<turbo-frame id="modal">
  <%= tag.div data: {controller: "turbo-modal", action: @actions} do %>
    <div class="z-10 fixed inset-0 bg-pls-white/70 overflow-y-auto h-full w-full">
      <div class="relative">
        <div data-turbo-modal-target="modalContent" 
             class="relative z-20 mx-auto bg-pls-white border-2 border-pls rounded-2xl 
                    <%= @small ? 'w-10/12 md:w-1/3' : 'w-10/12 md:w-2/3' %> <%= @small ? 'mt-32' : 'mt-16' %>"
        >

          <!-- button -->
          <div class="absolute z-30 -top-4 -right-4 p-2 border-2 border-pls rounded-xl text-weight-bold text-2xl cursor-pointer bg-white">
            <%= button_tag '<i class="fa-solid fa-xmark"></i>'.html_safe, data: { action: "turbo-modal#hideModal" }, class: 'cursor-pointer' %>
          </div>

          <div class="m-4 z-30">
            <% unless @title.blank? %>  
              <div class="modal-header">
                <h2><%= @title %></h2>
              </div>
            <% end %>
            <div class="main-modal-body">
              <%= content %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</turbo-frame>

