<%= content_tag :div, class: "h-full project #{'with-filter' unless @no_filter} border-1 rounded-xl hover:shadow-2xl hover:bg-gray-200 #{@card_style}", data: @filter_data do %>
  <%= link_to @activity, class: "h-full relative flex flex-col my-2 p-4", data: {turbo: false} do %>
    <% if @in_evidence || @hidden %>  
      <div class="absolute -top-6 -left-2 bg-pls-flash text-pls-strong border-2 border-pls-strong rounded-xl text-xl p-1">
        <i class="far <%= @in_evidence ? 'fa-star' : 'fa-eye-slash' %>"></i>
      </div>
    <% end %>

    <div class="grow text-center">
      <%= @activity_type %>
      <div class="font-semibold text-xl text-pls-strong my-2"><%= @activity.name.upcase %></div>
    </div>

    <div class="text-sm text-gray-700 text-right">
      <% if @organization || @campus %>  
        <div class="text-sm mb-2">
          <%= @organization %>
          <strong><%= "Sede #{@campus.name}" if @campus %></strong>
        </div>
      <% end %>
      <div>
        Organizzato da: <strong><%= @project.areas_to_s %></strong>
      </div>
      <% if @other_areas.any? %>  
        <div>Altre aree di interesse:</div>
        <div><%= @other_areas.map(&:name).join(', ') %></div>
      <% end %>
      <div class="font-bold"><%= helpers.project_academic_years_to_s(@project) %></div>  
    </div>
  <% end %>
<% end %>
