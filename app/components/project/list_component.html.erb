<% unless @no_filter %>  
  <div class="p-4">
    <%= render Filter::ProjectsComponent.new(no_year_filter: @no_year_filter, no_area_filter: @no_area_filter) %>  
  </div>
<% end %>

<div class="lg:flex lg:flex-wrap">
  <% @projects.each do |project| %>  
    <div class="lg:w-1/2 xl:w-1/3 p-2 lg:p-4"> 
      <%= render Project::CardComponent.new(project, no_filter: @no_filter) %>  
    </div>
  <% end %>
</div>

