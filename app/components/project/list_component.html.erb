<% unless @no_filter %>  
  <div class="p-4">
    <%= render Filter::ProjectsComponent.new(area_id: @area_id, no_year_filter: @no_year_filter, no_area_filter: @no_area_filter) %>  
  </div>
<% end %>

<div class="lg:flex lg:flex-wrap lg:items-stretch">
  <% @projects.each do |project| %>  
    <div class="lg:w-1/2 xl:w-1/3 p-2 lg:p-4"> 
      <%= render Activity::CardComponent.new(project, no_filter: @no_filter, in_evidence: project.in_evidence) %>  
    </div>
  <% end %>
</div>

