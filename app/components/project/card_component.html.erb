<%= content_tag :div, class: "h-full project #{'with-filter' unless @no_filter} #{@opacity}", data: @filter_data do %>
  <%= link_to @project, class: "h-full relative flex flex-col my-2 bg-gray-100 border-t-4 #{@border_color} rounded-b-xl p-4 hover:bg-pls-light hover:shadow-2xl" do %>
    <% if @in_evidence %>  
      <div class="absolute -top-4 -left-2 bg-gray-100 text-pls-strong border-4 border-pls-light rounded-xl text-2xl p-1">
        <i class="far fa-star"></i>
      </div>
    <% end %>
    <% if @project.hidden %>  
      <div class="absolute -top-4 -left-2 bg-gray-100 text-pls-strong border-4 border-pls-light rounded-xl text-2xl p-1">
        <i class="far fa-eye-slash"></i>
      </div>
    <% end %>
    <div class="grow text-center">
      <%= @project.activity_type %>
      <h3 class="font-semibold my-2"><%= @project.name.upcase %></h3>
    </div>
    <div class="text-sm text-gray-700 text-right">
      <% if @project.organization_id || @project.campus_id %>  
        <div class="text-sm mb-2">
          <%= @project.organization if @project.organization_id %>
          <strong><%= "Sede #{@project.campus.name}" if @project.campus_id %></strong>
        </div>
      <% end %>
      <div><strong>Organizzato da:</strong> <%= @project.areas_to_s %></div>
      <div><%= helpers.possible_label_from_array 'Altre aree di interesse', @other_areas, margins: 'my-0', separator: ', ', with_link: false %></div>
      <div><%= helpers.project_academic_years_to_s(@project) %></div>  
    </div>
  <% end %>
<% end %>
