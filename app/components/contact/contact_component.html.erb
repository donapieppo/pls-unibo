<% if @contact.avatar.attached? %>
  <%= image_tag @contact.avatar.variant(resize_to_limit: [250, 250]), class: 'rounded p-0 my-4' %>
<% end %>
<h2 class="my-2">
  <%= @contact.name %> <%= @contact.surname %>
</h2>

<hr/>

<div>
  <div class="my-2"><%= @contact.affiliation %></div>
  <div class="my-4">
    <div><%= mail_to @contact.email %> </div>
    <div><%= link_to link_icon + " " + @contact.web_page, @contact.web_page, class: 'underline' %></div>
    <div class="my-4 ml-4 italic text-gray-700"><%= @contact.description %></div>
  </div>
  <% if @contactPolicy.edit? %>  
    <div class="text-right">
      <%= link_to 'modifica', [:edit, @contact], class: 'underline' %>  
    </div>
  <% end %>
</div>
