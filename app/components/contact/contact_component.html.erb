<div class="text-center py-4">
  <% if @contact.avatar.attached? %>
    <%= image_tag @contact.avatar.variant(resize_to_limit: [250, 250]), class: 'p-0 my-2 mx-auto rounded-2xl' %>
  <% end %>
  <h2 class="my-2">
    <%= @contact.name %> <%= @contact.surname %>
  </h2>
</div>

<hr/>

<div class="my-2"><%= @contact.affiliation %></div>
<div class="my-4">
  <% unless @contact.email.blank? %>  
    <div><%= mail_to @contact.email, mail_icon + " " + @contact.email, class: 'underline' %></div>
  <% end %>
  <% unless @contact.web_page.blank? %>
    <div><%= link_to link_icon + " " + @contact.web_page, @contact.web_page, class: 'underline' %></div>
  <% end %>
  <div class="my-4 italic text-gray-700 text-justify"><%= @contact.description %></div>
</div>
<% if @contactPolicy.edit? %>  
  <div class="text-right">
    <%= link_to 'modifica', [:edit, @contact], class: 'underline' %>  
  </div>
<% end %>
