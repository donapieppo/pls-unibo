<div class="relative border-t-4 border-pls-light pt-16">
  <div class="container">
    <div class="border-4 border-pls-light bg-white text-2xl lg:text-4xl font-bold absolute -top-8 -ml-2 md:-ml-16 text-pls p-4 px-8 rounded-2xl tracking-wider">
      <%= link_to @edition.academic_year_to_s, @edition %>
    </div>

    <div class="md:flex md:flex-wrap mt-8">
      <div class="md:w-2/3">
        <h3 class="text-xl lg:text-4xl"> 
          <%= link_to(@edition.name, @edition) if @edition.name != @title_if_different_from %> 
        </h3>

        <div class="my-8">
          <div class="lg:text-lg">
            <%= simple_format @edition.description %>  
          </div>
          <div class="my-2">
            <%= helpers.possible_label_from_array 'Contatti', @edition.contacts %>
            <%= helpers.possible_label_from_array 'Relatori', @edition.speakers %>
            <%= helpers.possible_label 'Audience', @edition.audience %>
          </div>

          <% unless @short %>  
            <div class="italic text-justify my-4 text-gray-600">
              <%= @edition.details %>  
            </div>
            <%= render BookingAndActionsComponent.new(what: @edition) %>
          <% end %>
        </div>
      </div>
      <div class="md:w-1/3">
        <% if @resources.any? %>  
          <div class="my-4">
            <% @resources.each do |resource| %>
              <%= render resource %>  
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <% if @events.any? %>  
      <%= render EventsListComponent.new(events: @events, short: @short || @edition.atomic) %>  
    <% end %>
  </div>
</div>
