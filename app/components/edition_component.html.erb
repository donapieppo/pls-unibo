<div class="my-2 text-right">
  <%= helpers.link_to_edit_if_editable @edition, msg: 'Modifica i dati' %>
</div>

<div class="md:flex md:flex-wrap mt-2">
  <div class="md:w-2/3 xl:w-3/4">
    <% unless @skip_title %>  
      <h3 class="mt-4 text-xl lg:text-3xl"> 
        <%= link_to(@edition.name, @edition) %> 
      </h3>
    <% end %>

    <div class="my-2 text-lg text-pls font-semibold">
      <%= @edition.audience %>
    </div>

    <div class="my-8">
      <div class="lg:text-lg my-4">
        <%= simple_format @edition.description %>  
      </div>
      <div class="my-2">
        <%= helpers.possible_label_from_array 'Contatti', @edition.contacts %>
      </div>
      <div class="my-2">
        <%= helpers.possible_label_from_array 'Relatori', @edition.speakers %>
      </div>

      <% if @short %>  
        <%= render BookingComponent.new(what: @edition, user: helpers.current_user, short: true) %>
      <% else %>  
        <div class="italic text-justify my-4 text-gray-700">
          <%= @edition.details %>  
        </div>
        <div class="my-4">
          <%= render BookingComponent.new(what: @edition, user: helpers.current_user) %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="md:w-1/3 xl:w-1/4 px-4 mx-auto">
    <% @resources.each do |resource| %>
      <%= render resource, with_preview: true %>  
    <% end %>
  </div>
</div>

<% if @events.any? %>  
  <div class="my-4">
    <%= render EventsListComponent.new(events: @events, short: @short || @edition.atomic, with_image: @with_image) %>  
  </div>
<% end %>

<% if @short %>  
  <div class="my-8 text-right text-2xl text-pls">
    <%= link_to 'dettagli <i class="far fa-arrow-alt-circle-right"></i>'.html_safe, @edition %>
  </div>
<% end %>
