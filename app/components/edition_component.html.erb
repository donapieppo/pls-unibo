<div class="relative bg-pls border-t-8 border-pls py-16">
  <div class="bg-pls text-2xl lg:text-4xl font-bold absolute -top-10 ml-8 text-white p-4 px-8 rounded-xl tracking-wider">
    <%= @edition.academic_year_to_s %>
  </div>
  <h3 class="text-xl lg:text-4xl mx-4 lg:max-w-6xl lg:mx-auto"> 
    <%= @edition.name %> 
    <%= link_to(edit_icon, [:edit, @edition], class: 'float-right') if @can_edit %>  
  </h3>

  <div class="px-2 max-w-6xl m-auto my-16">
    <div class="mt-4">
      Contatti: <%= @edition.contacts.map(&:name).join(', ') %> <br/> 
      Relatori: <%= @edition.speakers.map(&:name).join(', ') %>  
    <%= simple_format @edition.description %>  
    <div class="italic text-justify my-4 text-gray-600">
      <%= @edition.details %>  
    </div>
    </div>

    <% if @events.any? %>  
      <div class="my-4">
        <h3 class="text-2xl">Eventi</h3>
        <% @events.each do |event| %>  
          <%= render 'events/event_item', event: event %>  
        <% end %>
      </div>
    <% end %>

    <% if @resources.any? %>  
      <div class="my-4">
        <h3 class="text-2xl">Risorse</h3>
        <% @resources.each do |resource| %>
          <%= render resource %>  
        <% end %>
      </div>
    <% end %>
  </div>
</div>
