<table class="table-auto">
  <thead>
    <tr>
      <th></th>
      <th>in presenza</th>
      <th>on line</th>
      <th>date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% year = Date.today.year %>
    <% @activities.each do |activity| %>  
      <% if year != (year = activity.booking_start.year) %>
        <tr>
          <td colspan="5" class="text-center py-2 bg-pls-light font-bold"><%= year %></td>
        </tr>
        <% next %>
      <% end %>
      <tr>
        <td>
          <%= link_to activity.name.upcase, activity %> 
          <% if activity.booking_to_confirm? %>  
            <div class="text-yellow-800">
              Attivit√† con prenotazioni da confermare
            </div>
          <% end %>
        </td>
        <td nowrap="nowrap">
          <strong><%= activity.bookings.in_presence.sum(:seats) %></strong> 
          /
          <%= activity.seats %> 
        </td>
        <td nowrap="nowrap">
          <strong><%= activity.bookings.online.count(:seats) %></strong>
        </td>
        <td nowrap="nowrap">
          <%= l activity.booking_start, format: :day_short %> - <%= l activity.booking_end, format: :day_short %>
        </td>
        <td>
          <%= link_to 'iscritti', [activity, :bookings], class: 'underline' %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
