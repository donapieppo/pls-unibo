<div class="md:flex">
  <div class="md:w-1/3 font-bold md:text-right md:pr-4">
    <%= link_to @activity.name.upcase, @activity %>
    <% if @activity.booking_to_confirm? %>  
      <div class="text-yellow-800">
        Attivit√† con prenotazioni da confermare
      </div>
    <% end %>
  </div>
  <div class="md:w-2/3">
    <div>
      <strong><%= @activity.bookings.in_presence.sum(:seats) %></strong> 
      su <%= @activity.seats %> 
    in presenza 
    <span class="px-2">|</span>
    <strong><%= @activity.bookings.online.count(:seats) %></strong>
    online 
    </div>
    <div class="mt-1">
      <%= link_to 'mostra elenco iscritti', [@activity, :bookings], class: 'underline' %>  
      <span class="float-right text-sm">
        iscrizioni dal
        <%= l @activity.booking_start, format: :day_with_year %> al <%= l @activity.booking_end, format: :day_with_year %>
      </span>
    </div>
  </div>
</div>
