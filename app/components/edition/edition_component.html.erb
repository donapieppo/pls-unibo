<div class="my-2 text-right">
  <%= helpers.link_to_edit_if_editable @edition, msg: "Modifica i dati dell'edizione" %>
</div>

<div class="md:flex md:flex-wrap mt-2">
  <div class="md:w-2/3 xl:w-3/4">
    <% unless @skip_title %>  
      <h3 class="mt-4 text-xl lg:text-3xl"> 
        <%= link_to(@edition.name, @edition) %> 
      </h3>
    <% end %>

    <div class="my-2 text-lg text-pls font-semibold">
      <div>
        <i class="fas fa-users fa-fw mr-2"></i>
        <%= @edition.audience %>
      </div>
      <%= render Activity::DateAndPlaceComponent.new(@edition) %>  
      <%= render Activity::Extra.new(@edition) %>  
    </div>

    <div class="my-8">
      <div class="lg:text-lg my-4">
        <%= simple_format @edition.description %>  
      </div>
      <div class="my-2">
        <%= helpers.possible_label_from_array 'Contatti', @edition.contacts %>
      </div>
      <div class="my-2">
        <%= helpers.possible_label_from_array 'Relatori', @edition.speakers %>
      </div>

      <% if @short %>  
        <%= render Booking::BookingComponent.new(@edition.bookings.new, helpers.current_user, short: true) %>
      <% else %>  
        <div class="my-4 text-gray-700">
          <%= @edition.details %>  
        </div>
        <div class="my-4">
          <%= render Booking::BookingComponent.new(@edition.bookings.new, helpers.current_user) %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="md:w-1/3 xl:w-1/4 px-4 mx-auto">
    <% @resources.each do |resource| %>
      <%= render resource, with_preview: true %>  
    <% end %>
  </div>
</div>

<% unless @short || @events.empty? %>  
  <% if @events.size == 1 %>  
    <hr class="my-16"/>
    <%= render Event::EventComponent.new(event: @events.first, current_user: @current_user, no_edition: true, heading: :h2) %>
  <% else %>
    <div class="my-4">
      <%= render Event::ListComponent.new(events: @events, short: @short || @edition.atomic, with_image: @with_image) %>  
    </div>
  <% end %>
<% end %>

<% if @short %>  
  <div class="my-8 text-right text-2xl text-pls">
    <%= link_to 'dettagli <i class="far fa-arrow-alt-circle-right"></i>'.html_safe, @edition %>
  </div>
<% end %>
