<div class="lg:flex lg:flex-wrap">
  <% @editions.each do |edition| %>  
    <% project = edition.project %>  
    <div class="lg:w-1/2 p-2 lg:p-4"> 
      <%= link_to edition do %>  
        <div class="relative h-full flex flex-col my-2 bg-gray-100 border-t-4 border-yellow-400 rounded p-4 hover:bg-pls-light hover:shadow-2xl">
          <% if @in_evidence %>  
            <div class="absolute -top-4 -left-2 bg-gray-100 text-pls-strong border-4 border-yellow-400 rounded-xl text-2xl p-1">
              <i class="far fa-star"></i>
            </div>
          <% end %>
          <div class="flex-grow text-center">
            <%= project.activity_type %>
            <h3 class="font-semibold">
              <small><%= project.name %></small><br/>
              <%= edition.name.upcase %>
            </h3>
          </div>
          <div class="text-sm text-gray-700 text-right">
            <% if project.organization_id %>  
              <div class="text-sm mb-2"><%= project.organization %></div>
            <% end %>
            <div><strong>Organizzato da:</strong> <%= project.areas_to_s %></div>
            <div><%= helpers.possible_label_from_array 'Altre aree di interesse', project.interested_areas - project.areas, margins: 'my-0', separator: ', ', with_link: false %></div>
            <div><%= helpers.project_academic_years_to_s(project) %></div>  
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
