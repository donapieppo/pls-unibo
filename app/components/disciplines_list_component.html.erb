<% @disciplines.each do |discipline| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= discipline.name %></h5>
      <ul>
        <% discipline.activities.order(:slug).each do |activity| %>
          <li class="list-group">
            <%= link_to edit_activity_path(activity), class: 'list-group-item' do %>
              <stong><%= activity.name %></stong>
              <br/>
              <% activity.activity_datetimes.each do |ad| %>  
                <%= ad %>  
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
      <%= link_to 'Edit', edit_discipline_path(discipline) %>
      <%= link_to 'Destroy', discipline_path(discipline), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>

<%= link_to 'New Discipline', new_discipline_path %>
