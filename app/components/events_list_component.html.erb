<% if @short %>  
  <div class="my-2 flex flex-wrap px-2">
    <% @events.each do |event| %>
      <div class="w-32 pr-4 text-center">
        <div class="bg-white texl-pls border-2 shadow-xl rounded-2xl text-sm font-bold py-2 px-4">
          <%= l event.start_date %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <% @events.each do |event| %>  
    <div class="my-12 flex px-2">
      <div class="w-32 pr-4 lg:pr-8 text-center">
        <div class="bg-white texl-pls border-2 shadow-xl rounded-2xl text-sm font-bold py-2 px-4">
          <%= l event.start_date %>
        </div>
      </div>
      <div class="w-full">
        <div class="text-lg font-semibold">
          <%= link_to event.name.upcase, event %> 
        </div>
        <div class="text-sm italic text-justify text-gray-700 mt-4">
          <q><%= event.description %> </q>
        </div>
        <div class="mt-2">
          Relatori: <%= event.speakers.map(&:name).join(', ') %><br/>
        </div>
        <% if helpers.policy(event).book? %>  
          <%= link_to booking_icon, new_event_booking_path(event) %>  
        <% end %>
        <%= link_to(edit_icon, [:edit, event], class: "float-right") if helpers.policy(event).edit? %>  
      </div>
    </div>
  <% end %>
<% end %>
