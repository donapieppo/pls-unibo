<% if @bookable_for_itsself && !@user_this_booking %>  
  <div class="my-2">
    <% if @free_seats > 0 %>  
      [<%= @free_seats %> posti liberi in presenza su <%= @what.seats %>]
    <% else %>
      [ posti in presenza esauriti ]
    <% end %>
  </div>
  <% if @what.booking_to_confirm? %>  
    <div>
      Puoi fare richiesta di partecipazione.<br/> 
      In seguito riceverai ulteriori informazioni al tuo indirizzo email <%= @current_user.email if @current_user %>.
    </div>
  <% end %>
  <% txt = @what.booking_to_confirm? ? ' prenota' : ' iscriviti' %>  
  <% if @bookable_by_user_online %>  
    <div class="my-4">
      <%= link_to booking_icon + txt + " in remoto", [:new, @what, :booking, online: 1], class: 'button' %>
    </div>
  <% end %>
  <% if @bookable_by_user_inpresence %>  
    <div class="my-4">
      <%= link_to booking_icon + txt + " in presenza", [:new, @what, :booking], class: 'button' %>
    </div>
  <% end %>
<% end %>

<% if @bookable_for_students %>
  <div class="my-4">
    <%= link_to booking_icon + " Prenota i tuoi studenti", [:new_student, @what, :bookings], class: 'button' %>
  </div>
<% end %>

<% if @bookable_for_classes %>
  <div class="my-4">
    <%= link_to booking_icon + " Prenota una classe di studenti", [:new_school_class, @what, :bookings], class: 'button' %>
  </div>
<% end %>

<% unless @what.external_booking? %>  
  <% if @free_seats < 1 %>
    <div class="text-red-700 font-semibold my-4">  
      <span class="text-lg">Posti in presenza esauriti</span>
      <span class="fa-stack">
        <i class="fas fa-chair fa-stack-1x"></i>
        <i class="fas fa-ban fa-stack-2x"></i>
      </span>
    </div>
  <% end %>

  <% if @current_user %>  
    <div>
      <%= link_to 'Controlla i tuoi dati', myedit_users_path, class: 'underline' %>
    </div>
    <div>
      <%= link_to "Controlla le tue iscrizioni e prenotazioni per attivitÃ  PLS", me_users_path, class: "underline" %>
    </div>
  <% else %> 
    <div class="italic">
      Per iscriversi occorre essere loggati. 
      <%= link_to 'Accedi', login_path(for: @what.id), class: 'underline' %>.
    </div>
  <% end %>
<% end %>

<% if @current_user && @current_user.voyeur? && @what.bookable != 'no' && @what.bookable != 'external' %>  
  <div>
    <%= link_to 'Elenco prenotazioni', bookings_path(activity_id: @what.id), class: 'underline' %>  
  </div>
<% end %>

